

<h1>MY TO DO LIST!</h1>

<h2>What all do I need to Accomplish today?</h2>



<ul>
  {{#each burgers}}
    {{#unless this.completed}}
      <li>
       <p class= "toDo"> {{this.ID}} {{this.task}} </p>
            <p> Created : {{this.date}} </p>

        <form action="burgers/update/{{this.ID}}?_method=PUT" method="POST">
          <input type="hidden" name="completed" value="true">
          <button type="submit">COMPLETED!</button>
        </form>

       <!-- {{> burgers/delete-burger}} -->
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>COMPLETED TASKS</h2>

<ul>
  
  {{#each burgers}}
    {{#if this.completed}}
      <li>
        <div class ="item">
       <p class= "toDo"> {{this.ID}} {{this.task}} </p>
            <p> Created  {{this.date}} </p>

        <form action="burgers/update/{{this.ID}}?_method=PUT" method="POST">
          <input type="hidden" name="completed" value="false">
          <button type="submit">INCOMPLETE!</button>
        </form>

       <!-- {{> burgers/delete-burger}} -->
        </div>
      </li>
    {{/if}}
  {{/each}}
  
</ul>

<h3>Add a TASK</h3>
<form class="create-update-form" id= "addTask" action="/burgers/create" method="POST">

  <div class="form-group">
    <label for="ta">TASK:</label>
    <input type="text" id="ta" name="task">
  </div>

  <div class="form-group">
    <label for="ci">Complete or Incomplete?</label><br>
    <input type="radio" name="status" value="1" > incomplete!<br>
    <input type="radio" name="status" value="0"> Complete <br>
  </div>

  <button type="submit">Add Task</button>
</form>
